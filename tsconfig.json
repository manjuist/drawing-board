{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNEXT",
    "lib": ["dom"],
    "jsx": "react",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@": ["src"],
      "common": ["src/common"],
      "*": ["node_modules/*", "src/types/*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*"]
}
