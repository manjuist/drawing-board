{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNEXT",
    "lib": [ "dom" ],
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist/",
    "strict": true,
     "noImplicitAny": true,
     "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "common": ["./src/common"],
    },
    "esModuleInterop": true,
    "experimentalDecorators": true
  }
}
